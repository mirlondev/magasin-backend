package org.odema.posnew.mapper;

import org.odema.posnew.dto.UserDto;
import org.odema.posnew.entity.User;

public class UserMapper {

    public static UserDto toDto(User user) {
        if (user == null) return null;

        return new UserDto(
                user.getUserId(),
                user.getUsername(),
                user.getPassword(),
                user.getEmail(),
                user.getPhone(),
                user.getAddress(),
                user.getActive(),
                user.getRoles(),
                user.getCreatedAt(),
                user.getUpdatedAt(),
                user.getLastLogin()

        );
    }

    public static User toEntity(UserDto dto) {
        if (dto == null) return null;

        return User.builder()
                .userId(dto.userId())
                .username(dto.username())
                .password(dto.password())
                .email(dto.email())
                .phone(dto.phone())
                .address(dto.address())
                .active(dto.active())
                .build();
    }

}
